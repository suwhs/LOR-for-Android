<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="themedNewsDrawable">@drawable/ic_library_books_black_24dp</item>
        <item name="themedGalleryDrawable">@drawable/ic_image_black_24dp</item>
        <item name="themedTrackerDrawable">@drawable/ic_whatshot_black_24dp</item>
        <item name="themedForumDrawable">@drawable/ic_forum_black_24dp</item>
        <item name="themedSettingsDrawable">@drawable/ic_settings_black_24dp</item>

        <item name="themedRefreshDrawable">@drawable/ic_refresh_black_24dp</item>
        <item name="themedCommentDrawable">@drawable/ic_chat_bubble_black_24dp</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <item name="themedNewsDrawable">@drawable/ic_library_books_white_24dp</item>
        <item name="themedGalleryDrawable">@drawable/ic_image_white_24dp</item>
        <item name="themedTrackerDrawable">@drawable/ic_whatshot_white_24dp</item>
        <item name="themedForumDrawable">@drawable/ic_forum_white_24dp</item>
        <item name="themedSettingsDrawable">@drawable/ic_settings_white_24dp</item>

        <item name="themedRefreshDrawable">@drawable/ic_refresh_white_24dp</item>
        <item name="themedCommentDrawable">@drawable/ic_chat_bubble_white_24dp</item>
    </style>

    <style name="ImageActivityTheme">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="listSingleLine">
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="listThreeLine">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="primaryTextSingleLine">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="primaryText" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="secondaryText" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
